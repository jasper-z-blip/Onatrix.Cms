@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "Shared/_Layout.cshtml";
    var sections = Model.Value<IEnumerable<BlockListItem>>("pageSections");
}

@if (sections != null && sections.Any())
{
    foreach (var block in sections)
    {
        var alias = block.Content?.ContentType?.Alias ?? string.Empty;

        if (alias.Equals("heroBlock", System.StringComparison.OrdinalIgnoreCase))
        {
            @await Html.PartialAsync("Partials/Blocks/HeroBlock", block.Content)
        }
        else if (alias.Equals("aboutBlock", System.StringComparison.OrdinalIgnoreCase))
        {
            @await Html.PartialAsync("Partials/Blocks/AboutBlock", block.Content)
        }
        else if (alias.Equals("serviceBlock", StringComparison.OrdinalIgnoreCase))
        {
            @await Html.PartialAsync("Partials/Blocks/ServiceBlock", block.Content)
        }
        else if (alias.Equals("clientsBlock", System.StringComparison.OrdinalIgnoreCase))
        {
            @await Html.PartialAsync("Partials/Blocks/ClientsBlock", block.Content)
        }
        else if (alias.Equals("successBlock", StringComparison.OrdinalIgnoreCase))
        {
            @await Html.PartialAsync("Partials/Blocks/SuccessBlock", block.Content)
        }
        else if (alias.Equals("logosBlock", StringComparison.OrdinalIgnoreCase))
        {
            @await Html.PartialAsync("Partials/Blocks/LogosBlock", block.Content)
        }

    }
}