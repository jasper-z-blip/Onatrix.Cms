@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    Layout = "Shared/_Layout.cshtml";
    var blocks = Model.Value<BlockListModel>("contentBlocks");
}

@if (blocks != null && blocks.Any())
{
    foreach (var block in blocks)
    {
        var alias = block.Content.ContentType.Alias;

        if (alias.Equals("heroBlock", StringComparison.OrdinalIgnoreCase))
        {
            @await Html.PartialAsync("Components/heroBlock", block)
        }
    }

    @await Html.PartialAsync("Partials/Contact/_Map")

    foreach (var block in blocks)
    {
        var alias = block.Content.ContentType.Alias;

        if (alias.Equals("aboutContactBlock", StringComparison.OrdinalIgnoreCase))
        {
            @await Html.PartialAsync("Partials/Blocks/AboutContactBlock", block.Content)
        }
        else if (alias.Equals("logosBlock", StringComparison.OrdinalIgnoreCase))
        {
            @await Html.PartialAsync("Partials/Blocks/LogosBlock", block.Content)
        }
    }
}
