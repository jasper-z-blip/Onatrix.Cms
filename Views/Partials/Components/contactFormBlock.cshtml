@using Umbraco.Cms.Core.Models.Blocks
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<BlockListItem>

@{
    var c = Model.Content;
    var questionsTitle = c.Value<string>("questionsTitle");
    var questionIntro = c.Value<string>("questionIntro");
}

<div class="text-dark-grey">
    <h3>@(string.IsNullOrWhiteSpace(questionsTitle) ? "Have a question?" : questionsTitle)</h3>
</div>

@if (!string.IsNullOrWhiteSpace(questionIntro))
{
        <div class="pt-2 text-light-grey">
        @Html.Raw(questionIntro)
        </div>
}

<form method="post" action="#" class="pt-2 pb-12">
    <div class="flex gap-4 pt-2 pb-4 flex-col sm:flex-row">
        <label class="sr-only" for="rq-name">Name</label>
        <input id="rq-name" name="name" type="text"
               class="input-box" placeholder="Name" required />

        <label class="sr-only" for="rq-email">Email</label>
        <input id="rq-email" name="email" type="email"
               class="input-box" placeholder="Email" required />
    </div>

    <div>
        <label class="sr-only" for="rq-question">Question</label>
        <textarea id="rq-question" name="question"
                  class="input-box min-h-[200px]"
                  placeholder="Question"
                  required></textarea>
    </div>

    <div class="pt-4">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
