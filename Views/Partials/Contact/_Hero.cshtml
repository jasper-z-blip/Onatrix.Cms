@using Umbraco.Cms.Core.Models.PublishedContent
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var root = Model.Root();
    var home = root?.Children?.FirstOrDefault(x =>
        x.ContentType.Alias.Equals("home", StringComparison.OrdinalIgnoreCase) ||
        x.Name.Equals("Home", StringComparison.OrdinalIgnoreCase));

    var homeUrl = home?.Url() ?? "/";

    var currentUrl = Model.Url();
}

<section class="bg-bg-lightgrey h-[240px]">
    <div class="page-container text-center">
        <h2 class="pt-12 pb-3">Contact Us</h2>

        <nav class="flex justify-center gap-3" aria-label="Breadcrumb">
            <a href="@homeUrl" class="hover:underline">Home</a>
            <span>&gt;</span>
            <a href="@currentUrl" class="hover:underline">Contact</a>
        </nav>
    </div>
</section>
